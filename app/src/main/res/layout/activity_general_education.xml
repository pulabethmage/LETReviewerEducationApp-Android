<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/repeat_background"
    android:paddingTop="30dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:id="@+id/currentNumebrTXVID"
                        android:textColor="@color/colorWhite"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:text="0"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textColor="@color/colorWhite"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:text="/"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textColor="@color/colorWhite"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:text="200"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"/>

                </LinearLayout>




            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:id="@+id/categoryProfessional"
                    app:cardCornerRadius="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp">


                    <LinearLayout
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/QuestionTV"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:padding="10dp"
                            android:text="Question"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_gravity="center"
                            android:background="@color/colorGray"
                            android:orientation="vertical"
                            android:layout_width="200dp"
                            android:layout_height="1dp"/>

                        <LinearLayout

                            android:gravity="center"
                            android:id="@+id/answer_ID_1"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/ansfers_default_design"
                            android:padding="15dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">




                            <TextView
                                android:id="@+id/QuestionTV_A_1"
                                android:gravity="left"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/colorBlack"
                                android:textSize="18sp"
                                android:text="Choice 01"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <ImageView
                                android:id="@+id/QuestionIMV_A_1"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>




                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:id="@+id/answer_ID_2"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/ansfers_default_design"
                            android:padding="15dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">



                            <TextView
                                android:id="@+id/QuestionTV_A_2"
                                android:gravity="left"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/colorBlack"
                                android:textSize="18sp"
                                android:text="Choice 02"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:id="@+id/QuestionIMV_A_2"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>




                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:id="@+id/answer_ID_3"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/ansfers_default_design"
                            android:padding="15dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/QuestionTV_A_3"
                                android:gravity="left"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/colorBlack"
                                android:textSize="18sp"
                                android:text="Choice 03"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:id="@+id/QuestionIMV_A_3"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>



                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:id="@+id/answer_ID_4"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/ansfers_default_design"
                            android:padding="15dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/QuestionTV_A_4"
                                android:gravity="left"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/colorBlack"
                                android:textSize="18sp"
                                android:text="Choice 04"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:id="@+id/QuestionIMV_A_4"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>




                        </LinearLayout>

                        <TextView
                            android:visibility="invisible"
                            android:layout_gravity="center"
                            android:id="@+id/QuestionTV_CA"
                            android:text="Currect Answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <Button
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:id="@+id/nextItemButton"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:textSize="20dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/next_button_background"
                android:layout_gravity="center"
                android:text="Next Question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:id="@+id/deleteButton"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:textSize="20dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/next_button_background"
                android:layout_gravity="center"
                android:text="DELETE ALL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-2415030290687873/9683810296">
            </com.google.android.gms.ads.AdView>



        </LinearLayout>

    </ScrollView>

</LinearLayout>