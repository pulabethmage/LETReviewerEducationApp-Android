<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:id="@+id/categoryProfessional"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp">


        <LinearLayout
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mainQuestionID"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="Rabies comes from dog and other bites. How could this be prevented?"
            android:textAllCaps="true"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

            <LinearLayout
                android:layout_gravity="center"
                android:background="@color/colorGray"
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="1dp"/>

            <LinearLayout

            android:gravity="center"
            android:id="@+id/answer_ID_1"
            android:layout_marginTop="15dp"
            android:background="@drawable/ansfers_default_design"
            android:padding="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:text="Have the dog vaccinated with anti-rabies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:id="@+id/answer_ID_2"
                android:layout_marginTop="15dp"
                android:background="@drawable/ansfers_default_design"
                android:padding="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"
                    android:text="Tie the dogs at all times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:id="@+id/answer_ID_3"
                android:layout_marginTop="15dp"
                android:background="@drawable/ansfers_default_design"
                android:padding="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"
                    android:text="Keep the dogs in cage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:id="@+id/answer_ID_4"
                android:layout_marginTop="15dp"
                android:background="@drawable/ansfers_default_design"
                android:padding="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"
                    android:text="Kill the dog that bites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>